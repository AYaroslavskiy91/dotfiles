# This is Git's per-user configuration file.
[user]
# Please adapt and uncomment the following lines:
    name = Alex Yaroslavskiy
    email = ayaroslavskiy@cadent.tv

[alias]
    lg = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n'' %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
    lga = log --graph --decorate --abbrev-commit
    lgp = log --graph --decorate --abbrev-commit --first-parent --stat

    # clone with personal account
    aclone = !"$(echo git clone $@ | sed 's/github.com/ayaroslavskiy91.github.com/') #"
    # push with personal account
    aemail = config user.email ayaroslavskiy91@gmail.com

[color] 
    ui = true

[init]
    defaultBranch = main

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true    # use n and N to move between diff sections

    # delta detects terminal colors automatically; set one of these to disable auto-detection
    # dark = true
    # light = true

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[push]
    autoSetupRemote = true
